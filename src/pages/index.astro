---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component front matter". It never runs in the browser.
import Navbar from "../Components/Navbar/Navbar";
import Hero from "../Components/Hero/Hero";
import Footer from "../Components/Footer/Footer";
import Features from "../Components/Features/Features";
import Feedback from "../Components/Feedback/Feedback";
import homeLightScreenshot from '../assets/product/home_light.jpg';

console.log('This runs in your terminal, not the browser!');
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dirr: GPS, compass and RPY (roll, pitch, yaw) app.">
    <link rel="icon" type="image/svg+xml" href="/logo_lowpoly.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta property="og:title" content="Dirr: GPS, compass and RPY app." />
    <meta property="og:description" content="View, store and share sensor data: latitude, longitude, altitude, roll, pitch, yaw (heading), compass and more..." />
    <meta property="og:image" content={homeLightScreenshot} />

    <!-- Load fonts in html instead of CSS @import to workaround missing fonts on mobile. See https://stackoverflow.com/questions/25741042/google-fonts-not-loading-on-mobile -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self' https://fonts.gstatic.com; img-src 'self' https://*; child-src 'none'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' https://static.cloudflareinsights.com/; connect-src 'self' https://cloudflareinsights.com/;" />
    <title>Dirr - GPS, Compass, RPY</title>
  </head>
  <body>
    <div class="min-h-screen">
      <Navbar />
      <Hero/>
      <Features/>
      <Feedback/>
      <Footer/>
  </div>
  </body>
</html>
